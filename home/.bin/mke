#!/bin/bash

# Colores
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
RESET='\033[0m'

LAB_DIR="./LabSol"

# Verifica si ya existe
if [[ -d "$LAB_DIR" ]]; then
  echo -e "${YELLOW}[!] La carpeta 'LabSol' ya existe en esta ubicaci√≥n.${RESET}"
  exit 1
fi

# Crea estructura
mkdir -p "$LAB_DIR"/{recon,exploit,loot,files}

# Salida bonita
echo -e "${CYAN}"
echo "=========================================="
echo -e "üß™ ${GREEN}LABORATORIO 'LabSol' CREADO CON √âXITO${RESET}${CYAN}"
echo "=========================================="
echo -e "${CYAN}üìÅ Ruta:${RESET} $(realpath "$LAB_DIR")"
echo
echo -e "${CYAN}üìÇ Estructura:${RESET}"
echo -e "  ${GREEN}‚îú‚îÄ‚îÄ${RESET} recon/"
echo -e "  ${GREEN}‚îú‚îÄ‚îÄ${RESET} exploit/"
echo -e "  ${GREEN}‚îú‚îÄ‚îÄ${RESET} loot/"
echo -e "  ${GREEN}‚îî‚îÄ‚îÄ${RESET} files/"
echo -e "${CYAN}==========================================${RESET}"
