;; Workspaces ;;
(deflisten workspace0 "scripts/WorkSpaces {MONITOR}")

;; Workspaces Widgets ;;
(defwidget workspace0 [] (literal :content workspace0))

;; Workspaces Main Widget ;;
(defwidget workspaces [monitor]
  (box :orientation "v"
       :space-evenly false
       :valign "start"
       (box :visible (= monitor MONITOR) (workspace0))))
